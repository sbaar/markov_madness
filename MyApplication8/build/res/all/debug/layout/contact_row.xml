        android:id="@+id/contactNameView"
        android:paddingTop="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

